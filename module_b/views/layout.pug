doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Module B
        link(rel="stylesheet", href=static("stylesheets/bootstrap.min.css"))
    body 
        .min-vh-100.d-flex.flex-column.gap-3
            header.bg-light.shadow
                .container
                    .d-flex.justify-content-between.align-items-center
                        nav.navbar
                            a.navbar-brand(href="/") Module B
                        if user 
                            div #{user.username}
                        else 
                            div Not authenticated
            main.flex-fill.d-flex.flex-column
                .container.flex-fill.d-flex.flex-column
                    block content
            script(src=static("javascripts/bootstrap.bundle.min.js")) 